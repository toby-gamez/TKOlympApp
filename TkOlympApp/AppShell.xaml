<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TkOlympApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TkOlympApp"
    xmlns:svc="clr-namespace:TkOlympApp.Services"
    xmlns:pages="clr-namespace:TkOlympApp.Pages"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Title="{svc:Translate AppTitle}"
    Shell.TabBarUnselectedColor="{StaticResource Gray500}">

    <TabBar>
        <ShellContent
            Title="{svc:Translate Overview}"
            Icon="{mi:Material Icon=Dashboard}"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="Přehled" />

        <ShellContent
            Title="{svc:Translate Calendar}"
            Icon="{mi:Material Icon=CalendarMonth}"
            ContentTemplate="{DataTemplate pages:CalendarPage}"
            Route="Kalendář" />

        <ShellContent
            Title="{svc:Translate Noticeboard}"
            Icon="{mi:Material Icon=Article}"
            ContentTemplate="{DataTemplate pages:NoticeboardPage}"
            Route="Nástěnka" />

        <ShellContent
            Title="{svc:Translate Events_Title}"
            Icon="{mi:Material Icon=Event}"
            ContentTemplate="{DataTemplate pages:EventsPage}"
            Route="Akce" />

        <ShellContent
            Title="{svc:Translate Other}"
            Icon="{mi:Material Icon=MoreHoriz}"
            ContentTemplate="{DataTemplate pages:OtherPage}"
            Route="Ostatní" />
    </TabBar>

</Shell>
