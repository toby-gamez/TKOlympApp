<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TkOlympApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TkOlympApp"
    xmlns:pages="clr-namespace:TkOlympApp.Pages"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Title="TkOlympApp"
    Shell.TabBarForegroundColor="{StaticResource Primary}"
    Shell.TabBarUnselectedColor="{StaticResource Gray500}"
    Shell.TabBarTitleColor="{StaticResource Primary}">

    <TabBar>
        <ShellContent
            Title="Kalendář"
            Icon="{mi:Material Icon=CalendarMonth}"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="Kalendář" />

        <ShellContent
            Title="Nástěnka"
            Icon="{mi:Material Icon=Article}"
            ContentTemplate="{DataTemplate pages:NoticeboardPage}"
            Route="Nástěnka" />

        <ShellContent
            Title="Žebříček"
            Icon="{mi:Material Icon=Leaderboard}"
            ContentTemplate="{DataTemplate pages:LeaderboardPage}"
            Route="Žebříček" />

        <ShellContent
            Title="Ostatní"
            Icon="{mi:Material Icon=MoreHoriz}"
            ContentTemplate="{DataTemplate pages:OtherPage}"
            Route="Ostatní" />
    </TabBar>

</Shell>
