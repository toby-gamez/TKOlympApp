<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TkOlympApp.Converters"
             xmlns:local="clr-namespace:TkOlympApp"
             x:Class="TkOlympApp.MainPage"
             Title="Kalendář">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FriendlyDateConverter x:Key="FriendlyDateConverter" />
            <converters:EventNameConverter x:Key="EventNameConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="OnlyMineToolbarItem" Text="Mé: Ano" Clicked="OnToggleOnlyMineClicked" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid Padding="20">
        <ActivityIndicator x:Name="Loading" IsVisible="False" IsRunning="False" HorizontalOptions="Center" />
        <RefreshView x:Name="EventsRefresh" Refreshing="OnEventsRefresh">
            <Grid>
                <CollectionView x:Name="EventsCollection" IsGrouped="True" SelectionMode="None" VerticalOptions="FillAndExpand">
                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate>
                            <Border Stroke="{StaticResource PrimaryBrush}" StrokeThickness="2" Padding="8" Margin="6,12,6,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="{Binding WeekLabel}" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                            </Border>
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:DayGroup">
                            <VerticalStackLayout>
                                <Label Text="{Binding DayLabel}" FontAttributes="Bold" Margin="6,8,6,4" />
                                <!-- Render single event cards (when group size == 1) -->
                                <CollectionView ItemsSource="{Binding SingleEvents}" SelectionMode="Single" SelectionChanged="EventsCollection_SelectionChanged">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="12" Margin="6">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnEventCardTapped" />
                                                </Border.GestureRecognizers>
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="8" />
                                                </Border.StrokeShape>
                                                <VerticalStackLayout Spacing="6">
                                                    <Label Text="{Binding Event, Converter={StaticResource EventNameConverter}}" FontAttributes="Bold">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                                <Setter Property="TextDecorations" Value="Strikethrough" />
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Label Text="{Binding Event.LocationText}" />
                                                    <Label FontSize="12" Style="{StaticResource MutedLabelStyle}">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding Since, Converter={StaticResource FriendlyDateConverter}}" />
                                                                <Span Text="  " />
                                                                <Span Text="–" />
                                                                <Span Text="  " />
                                                                <Span Text="{Binding Until, Converter={StaticResource FriendlyDateConverter}}" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                </VerticalStackLayout>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <!-- Render grouped trainers and rows directly -->
                                <VerticalStackLayout Margin="6">
                                    <CollectionView ItemsSource="{Binding GroupedTrainers}" SelectionMode="None">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <VerticalStackLayout>
                                                    <Label Text="{Binding TrainerTitle}" FontAttributes="Bold" Margin="0,6,0,2" />
                                                    <CollectionView ItemsSource="{Binding Rows}" SelectionMode="None">
                                                        <CollectionView.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Padding="8" Margin="0,2,0,2">
                                                                    <Border.GestureRecognizers>
                                                                        <TapGestureRecognizer Tapped="OnGroupedRowTapped" />
                                                                    </Border.GestureRecognizers>
                                                                    <HorizontalStackLayout Spacing="8">
                                                                        <Label Text="{Binding TimeRange}" WidthRequest="120" />
                                                                        <Label Text="{Binding FirstRegistrant}" />
                                                                        <Label Text="{Binding DurationText}" HorizontalOptions="EndAndExpand" />
                                                                    </HorizontalStackLayout>
                                                                </Border>
                                                            </DataTemplate>
                                                        </CollectionView.ItemTemplate>
                                                    </CollectionView>
                                                </VerticalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label x:Name="EmptyLabel" IsVisible="False" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
            </Grid>
        </RefreshView>
    </Grid>

</ContentPage>
