<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TkOlympApp.Converters"
             x:Class="TkOlympApp.MainPage"
             Title="Kalendář">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FriendlyDateConverter x:Key="FriendlyDateConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0" Spacing="8" VerticalOptions="Center">
            <ActivityIndicator x:Name="Loading" IsVisible="False" IsRunning="False" HorizontalOptions="Center"/>
            <Label Text="Mé" VerticalTextAlignment="Center"/>
            <Switch x:Name="OnlyMineSwitch" IsToggled="True" Toggled="OnlyMineSwitch_Toggled"/>
            <Button Text="Reload" Clicked="OnReloadClicked" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="1" x:Name="EventsCollection" SelectionMode="Single" SelectionChanged="EventsCollection_SelectionChanged" VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12" Margin="6">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEventCardTapped" />
                            </Border.GestureRecognizers>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Event.Name}" FontAttributes="Bold">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <Label Text="{Binding Event.LocationText}" />
                                <Label FontSize="12" Style="{StaticResource MutedLabelStyle}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Since, Converter={StaticResource FriendlyDateConverter}}" />
                                            <Span Text=" 			" />
                                            <Span Text="–" />
                                            <Span Text=" 			" />
                                            <Span Text="{Binding Until, Converter={StaticResource FriendlyDateConverter}}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
</CollectionView>
    </Grid>

</ContentPage>
