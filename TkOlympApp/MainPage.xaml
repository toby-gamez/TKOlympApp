<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TkOlympApp.Converters"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.MainPage"
             Title="{svc:Translate Overview}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FriendlyDateConverter x:Key="FriendlyDateConverter" />
            <converters:CohortColorConverter x:Key="CohortColorConverter" />
            <converters:CohortItemHasColorConverter x:Key="CohortItemHasColorConverter" />
            <converters:EventNameConverter x:Key="EventNameConverter" />
            <converters:LocationOrTrainersConverter x:Key="LocationOrTrainersConverter" />
            <converters:EventTypeToLabelConverter x:Key="EventTypeToLabelConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20,12,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,12">
            <Label Text="{svc:Translate Overview}" FontSize="32" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                <Label Text="{svc:Translate UpcomingEvents}" FontSize="18" FontAttributes="Bold" />
                <ActivityIndicator x:Name="Loading" IsVisible="False" IsRunning="False" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <RefreshView Grid.Row="1" Refreshing="OnRefresh">
            <ScrollView>
                <Grid>
                    <VerticalStackLayout x:Name="DayContent" Spacing="8">
                        <!-- Day Label -->
                        <Label Text="{Binding DayLabel}" FontAttributes="Bold" Margin="6,0,6,4" FontSize="20" />

                        <!-- Single Events -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding SingleEvents}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" Margin="6">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnEventCardTapped" />
                                        </Border.GestureRecognizers>
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <VerticalStackLayout Spacing="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Label Text="{Binding Event, Converter={StaticResource EventNameConverter}}" FontAttributes="Bold" Grid.Column="0">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" Spacing="8">
                                                    <Label Text="{Binding Event.Type, Converter={StaticResource EventTypeToLabelConverter}}" FontSize="12" Style="{StaticResource MutedLabelStyle}" VerticalOptions="Center" />
                                                    <HorizontalStackLayout Spacing="6" HorizontalOptions="End" VerticalOptions="Center"
                                                         BindableLayout.ItemsSource="{Binding Event.EventTargetCohortsList}">
                                                        <BindableLayout.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border WidthRequest="18" HeightRequest="18" Padding="0" Margin="0" HorizontalOptions="End" StrokeThickness="0" VerticalOptions="Center"
                                                                        IsVisible="{Binding ., Converter={StaticResource CohortItemHasColorConverter}}">
                                                                    <Border.StrokeShape>
                                                                        <RoundRectangle CornerRadius="9" />
                                                                    </Border.StrokeShape>
                                                                    <Border.Background>
                                                                        <SolidColorBrush Color="{Binding ., Converter={StaticResource CohortColorConverter}}" />
                                                                    </Border.Background>
                                                                </Border>
                                                            </DataTemplate>
                                                        </BindableLayout.ItemTemplate>
                                                    </HorizontalStackLayout>
                                                </HorizontalStackLayout>
                                            </Grid>
                                            <Label Text="{Binding Event, Converter={StaticResource LocationOrTrainersConverter}}" />
                                            <Label FontSize="12" Style="{StaticResource MutedLabelStyle}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Since, Converter={StaticResource FriendlyDateConverter}}" />
                                                        <Span Text="  " />
                                                        <Span Text="â€“" />
                                                        <Span Text="  " />
                                                        <Span Text="{Binding Until, Converter={StaticResource FriendlyDateConverter}}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <!-- Grouped Trainers -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding GroupedTrainers}" Margin="6">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" Margin="0,6,0,6">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <VerticalStackLayout Spacing="6">
                                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,4">
                                                <Label Text="{Binding TrainerTitle}" FontAttributes="Bold" Grid.Column="0" />
                                                <Label Text="{svc:Translate EventType_Lesson}" FontSize="12" Style="{StaticResource MutedLabelStyle}" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" />
                                            </Grid>
                                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Rows}">
                                                <BindableLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="120,*,Auto" Padding="6,4" ColumnSpacing="8">
                                                            <Grid.GestureRecognizers>
                                                                <TapGestureRecognizer Tapped="OnGroupedRowTapped" />
                                                            </Grid.GestureRecognizers>
                                                            <Label Text="{Binding TimeRange}" Grid.Column="0">
                                                                <Label.Triggers>
                                                                    <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                            <Label Text="{Binding FirstRegistrant}" Grid.Column="1">
                                                                <Label.Triggers>
                                                                    <DataTrigger TargetType="Label" Binding="{Binding IsFree}" Value="True">
                                                                        <Setter Property="Text" Value="{svc:Translate Free}" />
                                                                        <Setter Property="TextColor" Value="Green" />
                                                                    </DataTrigger>
                                                                    <DataTrigger TargetType="Label" Binding="{Binding IsHighlighted}" Value="True">
                                                                        <Setter Property="FontAttributes" Value="Bold" />
                                                                    </DataTrigger>
                                                                    <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                            <Label Text="{Binding DurationText}" Grid.Column="2" HorizontalOptions="End">
                                                                <Label.Triggers>
                                                                    <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                        </Grid>
                                                    </DataTemplate>
                                                </BindableLayout.ItemTemplate>
                                            </VerticalStackLayout>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                    
                    <Label x:Name="EmptyLabel" Text="{svc:Translate NoUpcomingEvents}" IsVisible="False" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Style="{StaticResource MutedLabelStyle}" />
                </Grid>
            </ScrollView>
        </RefreshView>
    </Grid>

</ContentPage>
