<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TkOlympApp.Converters"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.MainPage"
             Title="{svc:Translate Overview}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FriendlyDateConverter x:Key="FriendlyDateConverter" />
            <converters:CohortColorConverter x:Key="CohortColorConverter" />
            <converters:CohortItemHasColorConverter x:Key="CohortItemHasColorConverter" />
            <converters:EventNameConverter x:Key="EventNameConverter" />
            <converters:LocationOrTrainersConverter x:Key="LocationOrTrainersConverter" />
            <converters:EventTypeToLabelConverter x:Key="EventTypeToLabelConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20,12,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                <Label Text="{svc:Translate UpcomingEvents}" FontSize="18" FontAttributes="Bold" />
                <ActivityIndicator x:Name="Loading" IsVisible="False" IsRunning="False" />
            </HorizontalStackLayout>

        <RefreshView Grid.Row="1" Refreshing="OnRefresh">
            <ScrollView>
                <VerticalStackLayout Spacing="8">
                    <Grid>
                        <VerticalStackLayout x:Name="DayContent" Spacing="8">
                            <!-- Day Label -->
                            <Label Text="{Binding DayLabel}" FontAttributes="Bold" Margin="0,2,0,2" FontSize="15" />

                        <!-- Single Events -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding SingleEvents}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnEventCardTapped" />
                                        </Grid.GestureRecognizers>
                                        <BoxView Color="Transparent" />
                                        <VerticalStackLayout Spacing="6" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Label Text="{Binding Event, Converter={StaticResource EventNameConverter}}" FontAttributes="Bold" Grid.Column="0">
                                                    <Label.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>
                                                <Label Grid.Column="1" Text="{Binding Event.Type, Converter={StaticResource EventTypeToLabelConverter}}" FontSize="12" Style="{StaticResource MutedLabelStyle}" HorizontalOptions="End" VerticalOptions="Center" />
                                            </Grid>
                                            <Label Text="{Binding Event, Converter={StaticResource LocationOrTrainersConverter}}" />
                                            <Label FontSize="12" Style="{StaticResource MutedLabelStyle}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Since, Converter={StaticResource FriendlyDateConverter}}" />
                                                        <Span Text="  " />
                                                        <Span Text="–" />
                                                        <Span Text="  " />
                                                        <Span Text="{Binding Until, Converter={StaticResource FriendlyDateConverter}}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <!-- Grouped Trainers -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding GroupedTrainers}" Margin="0">
                            <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="6">
                                            <BoxView Color="Transparent" />
                                            <VerticalStackLayout Spacing="6" Padding="12">
                                                <Grid ColumnDefinitions="*,Auto" Margin="0,2,0,2">
                                                    <Label Text="{Binding TrainerTitle}" FontAttributes="Bold" Grid.Column="0" />
                                                    <Label Text="{svc:Translate EventType_Lesson}" FontSize="12" Style="{StaticResource MutedLabelStyle}" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" />
                                                </Grid>
                                                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Rows}">
                                                    <BindableLayout.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid ColumnDefinitions="120,*,Auto" Padding="6,4" ColumnSpacing="8">
                                                                <Grid.GestureRecognizers>
                                                                    <TapGestureRecognizer Tapped="OnGroupedRowTapped" />
                                                                </Grid.GestureRecognizers>
                                                                <Label Text="{Binding TimeRange}" Grid.Column="0">
                                                                    <Label.Triggers>
                                                                        <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                        </DataTrigger>
                                                                    </Label.Triggers>
                                                                </Label>
                                                                <Label Text="{Binding FirstRegistrant}" Grid.Column="1">
                                                                    <Label.Triggers>
                                                                        <DataTrigger TargetType="Label" Binding="{Binding IsFree}" Value="True">
                                                                            <Setter Property="Text" Value="{svc:Translate Free}" />
                                                                            <Setter Property="TextColor" Value="Green" />
                                                                        </DataTrigger>
                                                                        <DataTrigger TargetType="Label" Binding="{Binding IsHighlighted}" Value="True">
                                                                            <Setter Property="FontAttributes" Value="Bold" />
                                                                        </DataTrigger>
                                                                        <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                        </DataTrigger>
                                                                    </Label.Triggers>
                                                                </Label>
                                                                <Label Text="{Binding DurationText}" Grid.Column="2" HorizontalOptions="End">
                                                                    <Label.Triggers>
                                                                        <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                        </DataTrigger>
                                                                    </Label.Triggers>
                                                                </Label>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </BindableLayout.ItemTemplate>
                                                </VerticalStackLayout>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                    
                    <Label x:Name="EmptyLabel" Text="{svc:Translate NoUpcomingEvents}" IsVisible="False" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Style="{StaticResource MutedLabelStyle}" />
                </Grid>
                
                <!-- Upcoming Camps Section -->
                <VerticalStackLayout x:Name="UpcomingCampsSection" Spacing="6" Margin="0,8,0,0">
                    <Label Text="{svc:Translate UpcomingCamps}" FontSize="18" FontAttributes="Bold" Margin="0,0,0,4" />
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding UpcomingCamps}">
                        <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnCampTapped" />
                                        </Grid.GestureRecognizers>
                                        <BoxView Color="Transparent" />
                                        <VerticalStackLayout Spacing="6" Padding="12">
                                            <Label Text="{Binding EventName}" FontAttributes="Bold" />
                                            <Label Text="{Binding LocationName}"/>
                                            <Label FontSize="12" Style="{StaticResource MutedLabelStyle}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Since, Converter={StaticResource FriendlyDateConverter}}" />
                                                        <Span Text="  " />
                                                        <Span Text="–" />
                                                        <Span Text="  " />
                                                        <Span Text="{Binding Until, Converter={StaticResource FriendlyDateConverter}}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>
                
                <!-- Recent Announcements Section -->
                <VerticalStackLayout x:Name="RecentAnnouncementsSection" Spacing="6" Margin="0,8,0,0">
                    <Label Text="{svc:Translate Noticeboard}" FontSize="18" FontAttributes="Bold" Margin="0,0,0,4" />
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding RecentAnnouncements}">
                        <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnAnnouncementTapped" />
                                        </Grid.GestureRecognizers>
                                        <BoxView Color="Transparent" />
                                        <VerticalStackLayout Spacing="4" Padding="12">
                                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                                            <Label Text="{Binding CreatedAt, StringFormat='{0:dd.MM.yyyy HH:mm}'}" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>

</ContentPage>
