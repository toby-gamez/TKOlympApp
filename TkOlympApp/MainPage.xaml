<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.MainPage"
             Title="Kalendář">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Zde bude zobrazen kalendář." />
            <ActivityIndicator x:Name="Loading" IsVisible="False" IsRunning="False" HorizontalOptions="Center"/>
            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                <Label Text="Mé" VerticalTextAlignment="Center"/>
                <Switch x:Name="OnlyMineSwitch" IsToggled="True" Toggled="OnlyMineSwitch_Toggled"/>
            </HorizontalStackLayout>
            <Label Text="Moje instance událostí (ID):" FontAttributes="Bold" />
            <CollectionView x:Name="EventsCollection" HeightRequest="400" SelectionMode="Single" SelectionChanged="EventsCollection_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12" Margin="6" HasShadow="True" CornerRadius="8" BorderColor="#ddd" BackgroundColor="#f2f2f2">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEventCardTapped" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Event.Name}" FontAttributes="Bold" />
                                <Label Text="{Binding Event.LocationText}" />
                                <Label Text="{Binding UpdatedAt, StringFormat='Aktualizováno: {0:dd.MM.yyyy HH:mm}'}" FontSize="12" TextColor="#666" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
