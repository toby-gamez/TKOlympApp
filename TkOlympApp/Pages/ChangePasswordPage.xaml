<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.ChangePasswordPage"
             Title="{svc:Translate ChangePassword_Title}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <Label Text="Zadejte nové heslo" FontAttributes="Bold" FontSize="18"/>

        <VerticalStackLayout Grid.Row="1" Spacing="12">
            <Border x:Name="NewPassBorder" StrokeThickness="1" Padding="8" Margin="0,12,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Entry x:Name="NewPassEntry" IsPassword="True" Placeholder="Nové heslo" TextChanged="OnNewPassTextChanged" />
                    <Label x:Name="LengthLabel" Text="Délka: 0/8" FontSize="Small" />
                </VerticalStackLayout>
            </Border>

            <Border x:Name="ConfirmPassBorder" StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Entry x:Name="ConfirmPassEntry" IsPassword="True" Placeholder="Potvrzení hesla" TextChanged="OnConfirmPassTextChanged" />
                    <Label x:Name="MatchLabel" Text="Hesla: -" FontSize="Small" />
                </VerticalStackLayout>
            </Border>

            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="2" Spacing="8">
            <Button Text="{svc:Translate Button_ChangePassword}" Clicked="OnChangeClicked" HorizontalOptions="FillAndExpand" />
            <Button Text="{svc:Translate Button_Cancel}" Clicked="OnCancelClicked" HorizontalOptions="FillAndExpand" Style="{StaticResource ButtonSecondary}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
