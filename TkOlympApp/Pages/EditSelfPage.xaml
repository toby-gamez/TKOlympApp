<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.EditSelfPage"
             Title="{svc:Translate Page_EditSelf_Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="{svc:Translate EditSelf_PersonalInfo}" FontAttributes="Bold" FontSize="18" />

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_FirstName}" VerticalOptions="Center" />
                    <Entry x:Name="FirstNameEntry" Placeholder="{svc:Translate Placeholder_FirstName}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_LastName}" VerticalOptions="Center" />
                    <Entry x:Name="LastNameEntry" Placeholder="{svc:Translate Placeholder_LastName}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_PrefixTitle}" VerticalOptions="Center" />
                    <Entry x:Name="PrefixTitleEntry" Placeholder="{svc:Translate Placeholder_PrefixTitle}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_SuffixTitle}" VerticalOptions="Center" />
                    <Entry x:Name="SuffixTitleEntry" Placeholder="{svc:Translate Placeholder_SuffixTitle}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Gender}" VerticalOptions="Center" />
                    <Picker x:Name="GenderPicker" HorizontalOptions="FillAndExpand">
                        <Picker.Items>
                            <x:String>{svc:Translate Gender_Other}</x:String>
                            <x:String>{svc:Translate Gender_Male}</x:String>
                            <x:String>{svc:Translate Gender_Female}</x:String>
                        </Picker.Items>
                    </Picker>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_BirthDate}" VerticalOptions="Center" />
                    <DatePicker x:Name="BirthDatePicker" Format="yyyy-MM-dd" DateSelected="OnBirthDateSelected" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Label Text="{svc:Translate EditSelf_Contact}" FontAttributes="Bold" FontSize="18" />

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Email}" VerticalOptions="Center" />
                    <Entry x:Name="EmailEntry" Placeholder="{svc:Translate Placeholder_Email}" Keyboard="Email" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Phone}" VerticalOptions="Center" />
                    <Entry x:Name="PhoneEntry" Placeholder="{svc:Translate Placeholder_Phone}" Keyboard="Telephone" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Nationality}" VerticalOptions="Center" />
                    <Picker x:Name="NationalityPicker" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Label Text="{svc:Translate EditSelf_Identifiers}" FontAttributes="Bold" FontSize="18" />

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_WdsfId}" VerticalOptions="Center" />
                    <Entry x:Name="WdsfEntry" Placeholder="{svc:Translate Placeholder_WdsfId}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_CstsId}" VerticalOptions="Center" />
                    <Entry x:Name="CstsEntry" Placeholder="{svc:Translate Placeholder_CstsId}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_NationalId}" VerticalOptions="Center" />
                    <Entry x:Name="NationalIdEntry" Placeholder="{svc:Translate Placeholder_NationalId}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Label Text="{svc:Translate EditSelf_Address}" FontAttributes="Bold" FontSize="18" />
            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Street}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry x:Name="StreetEntry" Placeholder="{svc:Translate Placeholder_Street}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="100" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_City}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry x:Name="CityEntry" Placeholder="{svc:Translate Placeholder_City}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="60" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_PostalCode}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry x:Name="PostalCodeEntry" Placeholder="{svc:Translate Placeholder_PostalCode}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="10" Keyboard="Numeric" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Region}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry x:Name="RegionEntry" Placeholder="{svc:Translate Placeholder_Region}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="60" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_District}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry x:Name="DistrictEntry" Placeholder="{svc:Translate Placeholder_District}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_ConscriptionNumber}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry x:Name="ConscriptionNumberEntry" Placeholder="{svc:Translate Placeholder_ConscriptionNumber}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="30" Keyboard="Numeric" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_OrientationNumber}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry x:Name="OrientationNumberEntry" Placeholder="{svc:Translate Placeholder_OrientationNumber}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="30" Keyboard="Numeric" />
                </HorizontalStackLayout>
            </Border>
            <Label Text="{svc:Translate Label_Bio}" FontAttributes="Bold" FontSize="18" />
            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Editor x:Name="BioEditor" AutoSize="TextChanges" HeightRequest="120" HorizontalOptions="FillAndExpand" />
            </Border>

            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

            <VerticalStackLayout Spacing="8">
                <Button x:Name="SaveButton" Text="{svc:Translate Button_Save}" Clicked="OnSaveClicked" HorizontalOptions="FillAndExpand" />
                <Button x:Name="CancelButton" Text="{svc:Translate Button_Cancel}" Clicked="OnCancelClicked" HorizontalOptions="FillAndExpand" Style="{StaticResource ButtonSecondary}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
