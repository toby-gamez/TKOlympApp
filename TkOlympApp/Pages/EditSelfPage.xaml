<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:Class="TkOlympApp.Pages.EditSelfPage"
             x:DataType="viewModels:EditSelfViewModel"
             Title="{svc:Translate Page_EditSelf_Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="{svc:Translate EditSelf_PersonalInfo}" FontAttributes="Bold" FontSize="18" />

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_FirstName}" VerticalOptions="Center" />
                    <Entry Text="{Binding FirstName}" Placeholder="{svc:Translate Placeholder_FirstName}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_LastName}" VerticalOptions="Center" />
                    <Entry Text="{Binding LastName}" Placeholder="{svc:Translate Placeholder_LastName}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_PrefixTitle}" VerticalOptions="Center" />
                    <Entry Text="{Binding PrefixTitle}" Placeholder="{svc:Translate Placeholder_PrefixTitle}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_SuffixTitle}" VerticalOptions="Center" />
                    <Entry Text="{Binding SuffixTitle}" Placeholder="{svc:Translate Placeholder_SuffixTitle}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Gender}" VerticalOptions="Center" />
                    <Picker ItemsSource="{Binding GenderOptions}"
                            SelectedIndex="{Binding SelectedGenderIndex}"
                            HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_BirthDate}" VerticalOptions="Center" />
                    <DatePicker Format="yyyy-MM-dd"
                                Date="{Binding BirthDate}"
                                HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Label Text="{svc:Translate EditSelf_Contact}" FontAttributes="Bold" FontSize="18" />

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Email}" VerticalOptions="Center" />
                    <Entry Text="{Binding Email}" Placeholder="{svc:Translate Placeholder_Email}" Keyboard="Email" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Phone}" VerticalOptions="Center" />
                    <Entry Text="{Binding Phone}" Placeholder="{svc:Translate Placeholder_Phone}" Keyboard="Telephone" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Nationality}" VerticalOptions="Center" />
                        <Picker ItemsSource="{Binding NationalityOptions}"
                            SelectedItem="{Binding SelectedNationality}"
                            HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Label Text="{svc:Translate EditSelf_Identifiers}" FontAttributes="Bold" FontSize="18" />

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_WdsfId}" VerticalOptions="Center" />
                    <Entry Text="{Binding WdsfId}" Placeholder="{svc:Translate Placeholder_WdsfId}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_CstsId}" VerticalOptions="Center" />
                    <Entry Text="{Binding CstsId}" Placeholder="{svc:Translate Placeholder_CstsId}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_NationalId}" VerticalOptions="Center" />
                    <Entry Text="{Binding NationalId}" Placeholder="{svc:Translate Placeholder_NationalId}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Label Text="{svc:Translate EditSelf_Address}" FontAttributes="Bold" FontSize="18" />
            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Street}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry Text="{Binding Street}" Placeholder="{svc:Translate Placeholder_Street}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="100" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_City}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry Text="{Binding City}" Placeholder="{svc:Translate Placeholder_City}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="60" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_PostalCode}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry Text="{Binding PostalCode}" Placeholder="{svc:Translate Placeholder_PostalCode}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="10" Keyboard="Numeric" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_Region}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry Text="{Binding Region}" Placeholder="{svc:Translate Placeholder_Region}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="60" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_District}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry Text="{Binding District}" Placeholder="{svc:Translate Placeholder_District}" HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_ConscriptionNumber}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry Text="{Binding ConscriptionNumber}" Placeholder="{svc:Translate Placeholder_ConscriptionNumber}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="30" Keyboard="Numeric" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="{svc:Translate Label_OrientationNumber}" VerticalOptions="Center" />
                    <Label Text="*" TextColor="Red" VerticalOptions="Center" Margin="4,0,0,0" />
                    <Entry Text="{Binding OrientationNumber}" Placeholder="{svc:Translate Placeholder_OrientationNumber}" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" MaxLength="30" Keyboard="Numeric" />
                </HorizontalStackLayout>
            </Border>
            <Label Text="{svc:Translate Label_Bio}" FontAttributes="Bold" FontSize="18" />
            <Border StrokeThickness="1" Padding="8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Editor Text="{Binding Bio}" AutoSize="TextChanges" HeightRequest="120" HorizontalOptions="FillAndExpand" />
            </Border>

            <Label TextColor="Red" IsVisible="{Binding IsErrorVisible}" Text="{Binding ErrorText}" />

            <VerticalStackLayout Spacing="8">
                <Button Text="{svc:Translate Button_Save}" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" />
                <Button Text="{svc:Translate Button_Cancel}" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand" Style="{StaticResource ButtonSecondary}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
