<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.OtherPage"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             Title="{svc:Translate Other}">
    <Grid RowDefinitions="Auto,* ,Auto">

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,0,20,0" Spacing="12">
                <Label FontAttributes="Bold" Text="{svc:Translate Other_Section_Members}" />
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAboutMeClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Item_Profile}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Profile_Desc}" />
                    </VerticalStackLayout>    
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPeopleClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Item_People}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_People_Desc}" />
                    </VerticalStackLayout>    
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTrainersClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Trainers_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Trainers_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCohortGroupsClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_CohortGroups_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_CohortGroups_Desc}" />
                    </VerticalStackLayout>
                </Border>

                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnEventsClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Item_Events}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Events_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Label FontAttributes="Bold" Text="{svc:Translate Other_Section_App}" />
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguagesClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Languages_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Languages_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAboutAppClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_AboutApp_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_AboutApp_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPrivacyPolicyClicked" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Privacy_Title}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Privacy_List_Preview}" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

                
    </Grid>
</ContentPage>
