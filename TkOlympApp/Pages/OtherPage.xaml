<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.OtherPage"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:DataType="viewModels:OtherViewModel"
             Title="{svc:Translate Other}">
    <Grid RowDefinitions="Auto,* ,Auto">

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,0,20,0" Spacing="12">
                <Label FontAttributes="Bold" Text="{svc:Translate Other_Section_Members}" />
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AboutMeCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Item_Profile}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Profile_Desc}" />
                    </VerticalStackLayout>    
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PeopleCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Item_People}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_People_Desc}" />
                    </VerticalStackLayout>    
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TrainersCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Trainers_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Trainers_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CohortGroupsCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_CohortGroups_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_CohortGroups_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LeaderboardCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Leaderboard}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Leaderboard_Desc}" />
                    </VerticalStackLayout>    
                </Border>
                
                <Label FontAttributes="Bold" Text="{svc:Translate Other_Section_App}" />
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LanguagesCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_Languages_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_Languages_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AboutAppCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Other_AboutApp_Label}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Other_AboutApp_Desc}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NotificationSettingsCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Notifications_Settings}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Notifications_WhenNotUsingCalendar}" />
                    </VerticalStackLayout>
                </Border>
                <Border Padding="12" Margin="6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PrivacyPolicyCommand}" />
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <Label FontAttributes="Bold" Text="{svc:Translate Privacy_Title}" />
                        <Label Style="{StaticResource MutedLabelStyle}" Text="{svc:Translate Privacy_List_Preview}" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout Grid.Row="2" Padding="20" Spacing="8">
            <Button Text="{svc:Translate Other_Button_Logout}"
                Command="{Binding LogoutCommand}"
                HorizontalOptions="FillAndExpand" />
        </VerticalStackLayout>

                
    </Grid>
</ContentPage>
