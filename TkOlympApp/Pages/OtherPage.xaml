<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.OtherPage"
             Title="Ostatní">
    <Grid RowDefinitions="Auto,* ,Auto">

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,0,20,0" Spacing="12">
                <Label Text="Další nástroje a nastavení." />

                <Button Text="About me" Clicked="OnAboutMeClicked" />
                <Button Text="Lidé" Clicked="OnPeopleClicked" />
                <Button Text="Send test notification" Clicked="OnSendTestNotificationClicked" />
                    <Button Text="Trenéři a tr. prostory" Clicked="OnTrainersClicked" />
                    <Button Text="Tréninkové skupiny" Clicked="OnCohortGroupsClicked" />
            </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="2"
                Margin="20"
                Text="Odhlásit se"
                BackgroundColor="{DynamicResource Primary}"
                TextColor="White"
                Clicked="OnLogoutClicked" />
    </Grid>
</ContentPage>
