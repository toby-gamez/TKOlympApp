<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2021/maui/toolkit"
             x:Class="TkOlympApp.Pages.PlainTextPage"
             Title="Text">
            <ContentPage.Content>
        <VerticalStackLayout Padding="12" Spacing="12">
            <Label Text="Text" FontAttributes="Bold" FontSize="18" />
            <Border>
                <ScrollView>
                    <Editor x:Name="EditorText"
                            IsReadOnly="True"
                            AutoSize="TextChanges"
                            Keyboard="Text"
                            Text="{Binding PlainText}"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            Margin="6"
                            />
                </ScrollView>
            </Border>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
