<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2021/maui/toolkit"
            xmlns:idk="clr-namespace:Indiko.Maui.Controls.SelectableLabel;assembly=Indiko.Maui.Controls.SelectableLabel"
             x:Class="TkOlympApp.Pages.PlainTextPage"
             Title="Text">
            <ContentPage.Content>
        <VerticalStackLayout Padding="12" Spacing="12">
            <Label Text="Text" FontAttributes="Bold" FontSize="18" />
            <Border>
                <ScrollView>
                    <idk:SelectableLabel
                        x:Name="EditorText"
                        Text="{Binding PlainText}"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        Margin="6"
                        LineBreakMode="WordWrap" />
                </ScrollView>
            </Border>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
