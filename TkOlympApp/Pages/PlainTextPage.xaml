<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2021/maui/toolkit"
            xmlns:idk="clr-namespace:Indiko.Maui.Controls.SelectableLabel;assembly=Indiko.Maui.Controls.SelectableLabel"
            xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.PlainTextPage"
             Title="{svc:Translate PlainText_Title}">
            <ContentPage.Content>
        <VerticalStackLayout Padding="12" Spacing="12">
            <Label Text="{svc:Translate PlainText_Intro}"/>
            <Border Padding="12" Margin="6">
                <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <ScrollView>
                    <idk:SelectableLabel
                        x:Name="EditorText"
                        Text="{Binding PlainText}"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        Margin="6"
                        LineBreakMode="WordWrap" />
                </ScrollView>
            </Border>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
