<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TkOlympApp.Pages.AboutAppPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:svc="clr-namespace:TkOlympApp.Services"
    Title="{svc:Translate Other_AboutApp_Label}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label x:Name="AppTitleLabel" FontSize="18" />
            <Label x:Name="VersionLabel" Style="{StaticResource MutedLabelStyle}" />

            <Border Padding="12">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="{svc:Translate AboutApp_Description}" FontAttributes="Bold" />
                    <Label Text="{svc:Translate Other_AboutApp_Body}" />
                </VerticalStackLayout>
            </Border>


            <Border Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="{svc:Translate Other_AboutApp_License_Title}" FontAttributes="Bold" />
                    <Label Text="{svc:Translate Other_AboutApp_License_Text}" />
                </VerticalStackLayout>
            </Border>
            <Border Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="{svc:Translate Other_AboutApp_Authors_Title}" FontAttributes="Bold" />
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Tobias Heneman" FontAttributes="Bold" />
                                <Span Text=" - " />
                                <Span Text="{svc:Translate Other_Author_Tobias}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Filip Cani Canibal" FontAttributes="Bold" />
                                <Span Text=" - " />
                                <Span Text="{svc:Translate Other_Author_Filip}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>
            <VerticalStackLayout>
                <Label Text="{svc:Translate Brainrot_Disclaimer}" FontAttributes="Italic"/>
                <Label Text="Â© 2026 TK Olymp Olomouc, z. s." HorizontalOptions="Center" Margin="0,10,0,0" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
