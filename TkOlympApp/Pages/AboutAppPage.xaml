<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TkOlympApp.Pages.AboutAppPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="O aplikaci">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label x:Name="AppTitleLabel" FontSize="18" />
            <Label x:Name="VersionLabel" Style="{StaticResource MutedLabelStyle}" />

            <Border Padding="12">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
                <Label Text="Tato aplikace zobrazuje rozvrhy, aktuality a informace o trenérech a prostorách. Je napojena na vzdálené API a využívá lokální notifikace pro upozornění na nové aktuality a události." />
            </Border>

            <Label Text="Licenční informace" FontAttributes="Bold" />
            <Label Text="Tento projekt může obsahovat třetí strany knihoven; ověřte licence v závislostech." />

            <Label Text="Autoři a přispěvatelé" FontAttributes="Bold" />
            <Border Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="Tobias Heneman - hlavní vývojář" />
                    <Label Text="Filip Cani Canibal - překladatel, podporovatel a pomocník" />
                </VerticalStackLayout>
            </Border>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
