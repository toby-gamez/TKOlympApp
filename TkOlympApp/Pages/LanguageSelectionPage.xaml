<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.LanguageSelectionPage"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             Title="{svc:Translate Language_Title}">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">
            <Label x:Name="TitleLabel" FontSize="20" HorizontalOptions="Center" />
            <Label Text="" x:Name="DescriptionLabel" />
            <Picker x:Name="LanguagePicker" />
            <Button x:Name="ContinueButton" Clicked="OnContinueClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
