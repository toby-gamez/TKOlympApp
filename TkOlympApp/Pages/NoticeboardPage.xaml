<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:Class="TkOlympApp.Pages.NoticeboardPage"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:DataType="viewModels:NoticeboardViewModel"
             Title="{svc:Translate Noticeboard}">
    <Grid Padding="20,12,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0" Padding="0" Spacing="8" VerticalOptions="Center" Margin="0,0,0,5">
            <Button Text="{svc:Translate Noticeboard_TabAktuality}"
                    Command="{Binding ShowAktualityCommand}"
                    BackgroundColor="{Binding TabAktualityBackgroundColor}"
                    TextColor="{Binding TabAktualityTextColor}" />
            <Button Text="{svc:Translate Noticeboard_TabStala}"
                    Command="{Binding ShowStalaCommand}"
                    BackgroundColor="{Binding TabStalaBackgroundColor}"
                    TextColor="{Binding TabStalaTextColor}" />
        </HorizontalStackLayout>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView Margin="0"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedAnnouncement}"
                            ItemsSource="{Binding Announcements}"
                            VerticalOptions="FillAndExpand">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="4" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:NoticeboardAnnouncementItem">
                    <Border Padding="12" Margin="6">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding CreatedAtText}" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
                            <Label Text="{Binding PlainBody}" LineBreakMode="TailTruncation" MaxLines="2" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
