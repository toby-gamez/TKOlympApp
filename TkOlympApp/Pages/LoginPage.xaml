<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.LoginPage"
             Title="{svc:Translate Login_Title}"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

       <VerticalStackLayout Padding="24"
                     Spacing="16"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="Center">

              <Border Padding="12"
                            StrokeThickness="0"
                            BackgroundColor="#ee1733"
                            HorizontalOptions="Center"
                            VerticalOptions="Start"
                            WidthRequest="88"
                            HeightRequest="88"
                            StrokeShape="{RoundRectangle CornerRadius=22}"
                            Margin="0,8,0,0">
                     <Image Source="appiconcombined.svg"
                                   HeightRequest="64"
                                   WidthRequest="64"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
              </Border>
              <Label FontSize="24"
                     HorizontalOptions="Center"
                     Text="{svc:Translate Login_Title}"/>
              <Label FontSize="14" TextColor="Gray" HorizontalOptions="Center" HorizontalTextAlignment="Center" Text="{svc:Translate Login_Description}" />

              <Border StrokeShape="{RoundRectangle CornerRadius=8}"
                      Padding="8"
                      HorizontalOptions="FillAndExpand">
                     <Entry x:Name="UsernameEntry"
                            Placeholder="{svc:Translate Login_Placeholder_Username}"
                            ReturnType="Next"
                            ClearButtonVisibility="WhileEditing"
                            HorizontalOptions="FillAndExpand"/>
                     <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsernameBorderTapped"/>
                     </Border.GestureRecognizers>
              </Border>

              <Border
                      StrokeShape="{RoundRectangle CornerRadius=8}"
                      Padding="8"
                      HorizontalOptions="FillAndExpand">
                     <Entry x:Name="PasswordEntry"
                            Placeholder="{svc:Translate Login_Placeholder_Password}"
                            IsPassword="True"
                            ReturnType="Done"
                            HorizontalOptions="FillAndExpand"/>
                     <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPasswordBorderTapped"/>
                     </Border.GestureRecognizers>
              </Border>

              <Button Text="{svc:Translate Login_Button_Login}"
                            Clicked="OnLoginClicked"/>
       </VerticalStackLayout>

</ContentPage>
