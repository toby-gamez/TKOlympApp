<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.LanguagePage"
             Title="{svc:Translate Other_Languages_Label}"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:DataType="viewModels:LanguageViewModel">

    <CollectionView SelectionMode="Single"
                    ItemsSource="{Binding Languages}"
                    SelectedItem="{Binding SelectedLanguage}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewModels:LanguageViewModel.LangItem">
                <Grid Padding="12" ColumnDefinitions="Auto,*,Auto">
                    <Label Text="{Binding Flag}" FontSize="28" VerticalOptions="Center" />
                    <Label Grid.Column="1" Text="{Binding Name}" VerticalOptions="Center" Margin="12,0" />
                    <Label Grid.Column="2" x:Name="CheckLabel" Text="" VerticalOptions="Center" HorizontalOptions="End" FontSize="18">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding IsCurrent}" Value="True">
                                <Setter Property="Text" Value="âœ“" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
