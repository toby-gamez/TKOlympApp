<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TkOlympApp.Pages"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:Class="TkOlympApp.Pages.TrainersAndLocationsPage"
             x:Name="Page"
             x:DataType="viewModels:TrainersAndLocationsViewModel"
             Title="{svc:Translate TrainersAndLocations_Title}">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Text="{svc:Translate Trainers_Locations_Label}" FontAttributes="Bold" FontSize="16" Grid.Row="0" />

        <VerticalStackLayout x:Name="LocationsStack"
                             Grid.Row="1"
                             Margin="0,8,0,8"
                             Spacing="6"
                             BindableLayout.ItemsSource="{Binding Locations}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                        <Border Padding="12" Margin="0">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.OpenLocationCommand, Source={x:Reference Page}}"
                                                      CommandParameter="{Binding .}"
                                                      NumberOfTapsRequired="1" />
                            </Border.GestureRecognizers>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Label Text="{Binding}" />
                        </Border>
                    </DataTemplate>
            </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="2" Spacing="6">
                <Label Text="{svc:Translate Trainers_Label}" FontAttributes="Bold" FontSize="16" />
                <VerticalStackLayout x:Name="TrainersStack"
                                     Margin="0,8,0,0"
                                     Spacing="6"
                                     BindableLayout.ItemsSource="{Binding Trainers}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="viewModels:TrainersAndLocationsViewModel.TrainerItem">
                    <Border Padding="12" Margin="0">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BindingContext.OpenTrainerCommand, Source={x:Reference Page}}"
                                                  CommandParameter="{Binding .}"
                                                  NumberOfTapsRequired="1" />
                        </Border.GestureRecognizers>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Grid VerticalOptions="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Name}" Grid.Column="0" VerticalOptions="Center" />
                            <Label Text="{Binding Price}" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>
