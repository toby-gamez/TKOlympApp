<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TkOlympApp.Converters"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.EventsPage"
             x:Name="Root"
             Title="{svc:Translate Events_Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:EventNameConverter x:Key="EventNameConverter" />
            <converters:FriendlyDateConverter x:Key="FriendlyDateConverter" />
            <converters:CohortColorConverter x:Key="CohortColorConverter" />
            <converters:CohortItemHasColorConverter x:Key="CohortItemHasColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20,12,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0" Spacing="8" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5">
            <Button
                Text="{svc:Translate Planned}"
                Command="{Binding ShowPlannedCommand}"
                BackgroundColor="{Binding TabPlannedBackgroundColor}"
                TextColor="{Binding TabPlannedTextColor}" />
            <Button
                Text="{svc:Translate Occurred}"
                Command="{Binding ShowOccurredCommand}"
                BackgroundColor="{Binding TabOccurredBackgroundColor}"
                TextColor="{Binding TabOccurredTextColor}" />
        </HorizontalStackLayout>

        <RefreshView Grid.Row="1" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding VisibleItems}" Spacing="0">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="6">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding BindingContext.OpenEventCommand, Source={x:Reference Root}}"
                                        CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                                <BoxView Style="{StaticResource SelectableItemBackground}" />
                                <VerticalStackLayout Spacing="6" Padding="12">
                                    <Label Text="{Binding EventName}" FontAttributes="Bold" />
                                    <Label Text="{Binding LocationName}"/>
                                    <Label FontSize="12" Style="{StaticResource MutedLabelStyle}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Since, Converter={StaticResource FriendlyDateConverter}}" />
                                                <Span Text="  " />
                                                <Span Text="â€“" />
                                                <Span Text="  " />
                                                <Span Text="{Binding Until, Converter={StaticResource FriendlyDateConverter}}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>

</ContentPage>
