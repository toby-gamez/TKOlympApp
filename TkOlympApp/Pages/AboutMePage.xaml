<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.AboutMePage"
             Title="O mně">

    <ContentPage.Resources>
        <Style x:Key="KeyLabelStyle" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{DynamicResource Gray700}" />
        </Style>
        <Style x:Key="ValueLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource Gray900}" />
            <Setter Property="LineBreakMode" Value="TailTruncation" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="12">
                <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />
                <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" Margin="0,0,0,8" />
                <!-- Každý řádek: "klíč: hodnota" v jedné řádce -->
                <HorizontalStackLayout Spacing="6">
                    <Label Text="Jméno:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="NameValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Příjmení:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="SurnameValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Login:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="LoginValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Email:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="EmailValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="ID:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="IdValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Tenant ID:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="TenantValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Poslední přihlášení:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="LastLoginValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Poslední aktivita:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="LastActiveValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Vytvořen (uživatel):" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="UCreatedAtValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Vytvořen (záznam):" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="CreatedAtValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Aktualizován:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="UpdatedAtValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Poslední verze:" Style="{StaticResource KeyLabelStyle}" />
                    <Label x:Name="LastVersionValue" Style="{StaticResource ValueLabelStyle}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
