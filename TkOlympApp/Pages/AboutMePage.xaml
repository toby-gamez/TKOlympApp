<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:Class="TkOlympApp.Pages.AboutMePage"
             x:DataType="viewModels:AboutMeViewModel"
             Title="{svc:Translate AboutMe_Title}">

    <Grid RowDefinitions="Auto,*">
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="12">
                    <Label TextColor="Red"
                           IsVisible="{Binding IsErrorVisible}"
                           Text="{Binding ErrorText}"
                           Margin="0,0,0,8" />

                <!-- Primary: velké jméno nahoře, detaily pod ním -->
                <Border Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <!-- Jméno a příjmení velkým písmem -->
                        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="{Binding NameText}" FontSize="22" FontAttributes="Bold"/>
                            <Label Text="{Binding SurnameText}" FontSize="22" FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                        <!-- Důležité drobné údaje pod jménem -->
                            <Label Text="{Binding LoginText}" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Secondary: méně důležité informace -->
                <Border Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding LastLoginVisible}">
                            <Label Text="{svc:Translate About_LastLogin}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding LastLoginText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding LastActiveVisible}">
                            <Label Text="{svc:Translate About_LastActivity}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding LastActiveText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding CreatedAtVisible}">
                            <Label Text="{svc:Translate About_Created}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding CreatedAtText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding UpdatedAtVisible}">
                            <Label Text="{svc:Translate About_Updated}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding UpdatedAtText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Contact -->
                <Border Padding="12" IsVisible="{Binding ContactBorderVisible}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding EmailVisible}">
                            <Label Text="{svc:Translate About_Email}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding EmailText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding PhoneVisible}">
                            <Label Text="{svc:Translate About_Phone}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding PhoneText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Personal -->
                <Border Padding="12" IsVisible="{Binding PersonalBorderVisible}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding BioVisible}">
                            <Label Text="{svc:Translate About_Bio}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding BioText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding BirthDateVisible}">
                            <Label Text="{svc:Translate About_BirthDate}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding BirthDateText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding NationalityVisible}">
                            <Label Text="{svc:Translate About_Nationality}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding NationalityText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding GenderVisible}">
                            <Label Text="{svc:Translate About_Gender}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding GenderText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding IsTrainerVisible}">
                            <Label Text="{svc:Translate About_IsTrainer}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding IsTrainerText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Training groups / Cohorts -->
                <Border Padding="12" IsVisible="{Binding CohortsVisible}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{svc:Translate Person_Cohorts_Label}" FontAttributes="Bold" />
                        <StackLayout Spacing="8" BindableLayout.ItemsSource="{Binding Cohorts}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="viewModels:AboutMeViewModel.CohortItem">
                                    <Grid VerticalOptions="Center" HorizontalOptions="Fill">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding Name}"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Start" />

                                        <Border Grid.Column="1"
                                                WidthRequest="20"
                                                HeightRequest="20"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalOptions="End"
                                                VerticalOptions="Center"
                                                Background="{Binding Color}"
                                                Stroke="{x:Null}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10" />
                                            </Border.StrokeShape>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Address -->
                <Border Padding="12" IsVisible="{Binding AddressBorderVisible}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding AddressVisible}">
                            <Label Text="{svc:Translate About_Address}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding AddressText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Identifiers -->
                <Border Padding="12" IsVisible="{Binding IdsBorderVisible}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding ProxyIdVisible}">
                            <Label Text="{svc:Translate About_Id}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding ProxyIdText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding WdsfVisible}">
                            <Label Text="{svc:Translate About_WdsfId}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding WdsfIdText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding CstsVisible}">
                            <Label Text="{svc:Translate About_CstsId}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding CstsIdText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="6" IsVisible="{Binding NationalIdVisible}">
                            <Label Text="{svc:Translate About_NationalId}" FontAttributes="Bold" FontSize="12"/>
                            <Label Text="{Binding NationalIdText}" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Akční tlačítka pod celým obsahem -->
                <VerticalStackLayout Margin="0,20,0,0" Spacing="8">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                        <Button Grid.Column="0"
                                HorizontalOptions="FillAndExpand"
                                Text="{svc:Translate Button_ChangePassword_Open}"
                                Style="{StaticResource ButtonSecondary}"
                                Command="{Binding ChangePasswordCommand}" />

                        <Button Grid.Column="1"
                                HorizontalOptions="FillAndExpand"
                                Text="{svc:Translate Button_EditSelf}"
                                Style="{StaticResource ButtonSecondary}"
                                Command="{Binding EditSelfCommand}" />
                    </Grid>

                    <Button Text="{svc:Translate Other_Button_Logout}"
                            Command="{Binding LogoutCommand}" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>
