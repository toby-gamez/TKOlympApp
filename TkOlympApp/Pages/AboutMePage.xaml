<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.AboutMePage"
             Title="{svc:Translate AboutMe_Title}">

    <Grid RowDefinitions="Auto,*">
        <RefreshView x:Name="PageRefresh" Grid.Row="1" Refreshing="OnRefresh">
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="12">
                    <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" Margin="0,0,0,8" />

                <!-- Primary: velké jméno nahoře, detaily pod ním -->
                <Border Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <!-- Jméno a příjmení velkým písmem -->
                        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label x:Name="NameValue" FontSize="22" FontAttributes="Bold"/>
                            <Label x:Name="SurnameValue" FontSize="22" FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                        <!-- Důležité drobné údaje pod jménem -->
                            <Label x:Name="LoginValue" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Secondary: méně důležité informace -->
                <Border Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout x:Name="LastLoginRow" Spacing="6">
                            <Label Text="{svc:Translate About_LastLogin}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="LastLoginValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="LastActiveRow" Spacing="6">
                            <Label Text="{svc:Translate About_LastActivity}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="LastActiveValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="UCreatedAtRow" Spacing="6">
                            <Label Text="{svc:Translate About_Created}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="UCreatedAtValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="UpdatedAtRow" Spacing="6">
                            <Label Text="{svc:Translate About_Updated}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="UpdatedAtValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Contact -->
                <Border Padding="12" x:Name="ContactBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout x:Name="EmailRow" Spacing="6">
                            <Label Text="{svc:Translate About_Email}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="EmailValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="PhoneRow" Spacing="6">
                            <Label Text="{svc:Translate About_Phone}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="PhoneValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Personal -->
                <Border Padding="12" x:Name="PersonalBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout x:Name="BioRow" Spacing="6">
                            <Label Text="{svc:Translate About_Bio}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="BioValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="BirthDateRow" Spacing="6">
                            <Label Text="{svc:Translate About_BirthDate}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="BirthDateValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="NationalityRow" Spacing="6">
                            <Label Text="{svc:Translate About_Nationality}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="NationalityValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="GenderRow" Spacing="6">
                            <Label Text="{svc:Translate About_Gender}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="GenderValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="IsTrainerRow" Spacing="6">
                            <Label Text="{svc:Translate About_IsTrainer}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="IsTrainerValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Training groups / Cohorts -->
                <Border x:Name="CohortsFrame" Padding="12" IsVisible="False">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{svc:Translate Person_Cohorts_Label}" FontAttributes="Bold" />
                        <StackLayout x:Name="CohortDots" Spacing="8" />
                    </VerticalStackLayout>
                </Border>

                <!-- Address -->
                <Border Padding="12" x:Name="AddressBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout x:Name="AddressRow" Spacing="6">
                            <Label Text="{svc:Translate About_Address}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="AddressValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Identifiers -->
                <Border Padding="12" x:Name="IdsBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout x:Name="ProxyIdRow" Spacing="6">
                            <Label Text="{svc:Translate About_Id}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="ProxyIdValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="WdsfRow" Spacing="6">
                            <Label Text="{svc:Translate About_WdsfId}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="WdsfIdValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="CstsRow" Spacing="6">
                            <Label Text="{svc:Translate About_CstsId}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="CstsIdValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout x:Name="NationalIdRow" Spacing="6">
                            <Label Text="{svc:Translate About_NationalId}" FontAttributes="Bold" FontSize="12"/>
                            <Label x:Name="NationalIdValue" HorizontalOptions="StartAndExpand" FontSize="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Akční tlačítka pod celým obsahem -->
                <VerticalStackLayout Margin="0,20,0,0" Spacing="8">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                        <Button x:Name="ChangePasswordButton"
                            Grid.Column="0"
                            HorizontalOptions="FillAndExpand"
                            Text="{svc:Translate Button_ChangePassword_Open}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnChangePasswordClicked" />

                        <Button x:Name="EditSelfButton"
                            Grid.Column="1"
                            HorizontalOptions="FillAndExpand"
                            Text="{svc:Translate Button_EditSelf}"
                            Style="{StaticResource ButtonSecondary}"
                            Clicked="OnEditSelfClicked" />
                    </Grid>

                    <Button
                        Text="{svc:Translate Other_Button_Logout}"
                        Clicked="OnLogoutClicked" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>
