<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.AboutMePage"
             Title="O mně">

    <Grid RowDefinitions="Auto,*">
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="12">
                <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />
                <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" Margin="0,0,0,8" />
                <!-- Každý řádek: "klíč: hodnota" v jedné řádce -->
                <HorizontalStackLayout Spacing="6">
                    <Label Text="Jméno:"/>
                    <Label x:Name="NameValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Příjmení:" />
                    <Label x:Name="SurnameValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Login:"/>
                    <Label x:Name="LoginValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Email:"/>
                    <Label x:Name="EmailValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="ID:"/>
                    <Label x:Name="IdValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Tenant ID:"/>
                    <Label x:Name="TenantValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Poslední přihlášení:"/>
                    <Label x:Name="LastLoginValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Poslední aktivita:"/>
                    <Label x:Name="LastActiveValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Vytvořen (uživatel):"/>
                    <Label x:Name="UCreatedAtValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Vytvořen (záznam):"/>
                    <Label x:Name="CreatedAtValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Aktualizován:"/>
                    <Label x:Name="UpdatedAtValue"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="6">
                    <Label Text="Poslední verze:"/>
                    <Label x:Name="LastVersionValue"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
