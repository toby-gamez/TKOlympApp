<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.PrivacyPolicyPage"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:DataType="viewModels:PrivacyPolicyViewModel"
             Title="{svc:Translate Privacy_Title}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="{svc:Translate Privacy_EffectiveDate}" FontAttributes="Italic" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_Summary_Title}" />
            <Label Text="{svc:Translate Privacy_Summary_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S1_Title}" />
            <Label Text="{svc:Translate Privacy_S1_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S2_Title}" />
            <Label Text="{svc:Translate Privacy_S2_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S3_Title}" />
            <Label Text="{svc:Translate Privacy_S3_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S4_Title}" />
            <Label Text="{svc:Translate Privacy_S4_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S5_Title}" />
            <Label Text="{svc:Translate Privacy_S5_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S6_Title}" />
            <Label Text="{svc:Translate Privacy_S6_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S7_Title}" />
            <Label Text="{svc:Translate Privacy_S7_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_S8_Title}" />
            <Label Text="{svc:Translate Privacy_S8_Body}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

            <Label FontAttributes="Bold" Text="{svc:Translate Privacy_Contact_Title}" />
            <Label Margin="0,0,0,12">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{svc:Translate Privacy_Contact_Prefix}" />
                        <Span Text="{svc:Translate Privacy_Contact_LinkText}" TextDecorations="Underline" TextColor="{StaticResource Primary}">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenContactCommand}" NumberOfTapsRequired="1" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label FontAttributes="Italic" Text="{svc:Translate Privacy_TechnicalDetails}" LineBreakMode="WordWrap" Margin="0,0,0,12" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
