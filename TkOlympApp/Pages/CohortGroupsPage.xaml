<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TkOlympApp.Pages"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:Class="TkOlympApp.Pages.CohortGroupsPage"
             x:DataType="viewModels:CohortGroupsViewModel"
             Title="{svc:Translate CohortGroups_Title}">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="12">
                <CollectionView ItemsLayout="VerticalList"
                                ItemsSource="{Binding Groups}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:CohortGroupsViewModel.CohortGroupItem">
                            <Border Padding="12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="8">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                                        <Border Grid.Column="1"
                                                WidthRequest="20"
                                                HeightRequest="20"
                                                HorizontalOptions="End"
                                                VerticalOptions="Center"
                                                Background="{Binding ColorBrush}"
                                                IsVisible="{Binding HasColor}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10" />
                                            </Border.StrokeShape>
                                        </Border>
                                    </Grid>

                                    <VerticalStackLayout Spacing="6" IsVisible="{Binding HasDescription}">
                                        <Label FormattedText="{Binding DescriptionFormatted}" />
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
