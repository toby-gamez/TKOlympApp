<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:converters="clr-namespace:TkOlympApp.Converters"
             xmlns:vm="clr-namespace:TkOlympApp.ViewModels"
             x:Class="TkOlympApp.Pages.EventPage"
             x:DataType="vm:EventViewModel"
             Title="{svc:Translate EventPage_Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:CohortColorConverter x:Key="CohortColorConverter" />
            <converters:EventTypeToLabelConverter x:Key="EventTypeToLabelConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <RefreshView x:Name="RefreshViewControl" IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="12">

            <!-- Header (no Border) -->
            <VerticalStackLayout Spacing="8" Margin="8,6">
                <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="20" Text="{Binding TitleText}"/>
            </VerticalStackLayout>
            
            <!-- Meta Card -->
            <Border Padding="12" Margin="8,6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Grid>
                        <Label Text="{svc:Translate Event_Info_Label}" FontAttributes="Bold" VerticalOptions="Center" />
                    </Grid>
                    <Label x:Name="EventTypeLabel" Text="{Binding EventTypeText}" IsVisible="{Binding EventTypeVisible}"/>
                    <Label x:Name="LocationLabel" Text="{Binding LocationText}" IsVisible="{Binding LocationVisible}"/>
                    <Label x:Name="DateRangeLabel" Text="{Binding DateRangeText}" IsVisible="{Binding DateRangeVisible}"/>
                    <Label x:Name="CreatedAtLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" Text="{Binding CreatedAtText}"/>
                    <Label x:Name="UpdatedAtLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" Text="{Binding UpdatedAtText}" IsVisible="{Binding UpdatedAtVisible}"/>
                    <HorizontalStackLayout Spacing="12">
                        <Label x:Name="RegistrationOpenLabel" Text="{svc:Translate Registration_Open}" FontSize="12" TextColor="#2e7d32" IsVisible="{Binding RegistrationOpenVisible}" Style="{StaticResource MutedLabelStyle}"/>
                        <Label x:Name="PublicLabel" Text="{svc:Translate Public_Label}" IsVisible="{Binding PublicVisible}" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                        <Label x:Name="VisibleLabel" Text="{svc:Translate Visible_Label}" IsVisible="{Binding VisibleVisible}" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="12">
                        <Label x:Name="CapacityLabel" FontSize="12" Text="{Binding CapacityText}"/>
                        <Label x:Name="RegistrationsLabel" FontSize="12" Text="{Binding RegistrationsText}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Register Button (hidden by default, shown after data loads) -->
            <Button x:Name="RegisterButton" Text="{svc:Translate Registration_Button_Text}" IsVisible="{Binding RegisterButtonVisible}" Margin="8,6" HorizontalOptions="Fill" Command="{Binding RegisterCommand}" />

            <!-- Actions shown when already registered: Edit + Delete on one row (hidden by default) -->
                <Grid x:Name="RegistrationActionsRow" IsVisible="{Binding RegistrationActionsRowVisible}" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="8,6" HorizontalOptions="Fill">
                <Button x:Name="EditRegistrationButton" Text="{svc:Translate Edit_Button_Text}" Grid.Column="{Binding DeleteRegistrationButtonColumn}" HorizontalOptions="Fill" Command="{Binding EditRegistrationCommand}" Style="{StaticResource ButtonSecondary}" IsVisible="{Binding EditRegistrationButtonVisible}"/>
                <Button x:Name="DeleteRegistrationButton" Text="{svc:Translate Delete_Button_Text}" Grid.Column="{Binding DeleteRegistrationButtonColumn}" Grid.ColumnSpan="{Binding DeleteRegistrationButtonColumnSpan}" HorizontalOptions="Fill" Command="{Binding DeleteRegistrationCommand}" />
            </Grid>

            <!-- Description Card -->
            <Border x:Name="DescFrame" Padding="12" Margin="8,6"  IsVisible="{Binding DescFrameVisible}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                
                    <VerticalStackLayout Spacing="6">
                        <Grid ColumnDefinitions="*,22" HorizontalOptions="Fill">
                            <Label Text="{svc:Translate Event_Description_Label}" FontAttributes="Bold" Grid.Column="0" VerticalOptions="Center" />
                            <Button x:Name="CopyDescriptionButton" Text="{icons:Material Icon=ContentCopy}" Command="{Binding CopyDescriptionCommand}" Grid.Column="1" HorizontalOptions="End" BackgroundColor="Transparent" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" WidthRequest="22" MinimumWidthRequest="22" HeightRequest="22" MinimumHeightRequest="22" VerticalOptions="Center" Padding="4,0" />
                        </Grid>
                        <Label x:Name="DescLabel" LineBreakMode="WordWrap" FormattedText="{Binding DescriptionFormatted}"/>
                    </VerticalStackLayout>
            </Border>

            <!-- Summary Card -->
            <Border x:Name="SummaryFrame" Padding="12" Margin="8,6"  IsVisible="{Binding SummaryFrameVisible}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                
                    <VerticalStackLayout Spacing="6">
                        <Grid ColumnDefinitions="*,22" HorizontalOptions="Fill">
                            <Label Text="{svc:Translate Event_Summary_Label}" FontAttributes="Bold" Grid.Column="0" VerticalOptions="Center" />
                            <Button x:Name="CopySummaryButton" Text="{icons:Material Icon=ContentCopy}" Command="{Binding CopySummaryCommand}" Grid.Column="1" HorizontalOptions="End" BackgroundColor="Transparent" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" WidthRequest="22" MinimumWidthRequest="22" HeightRequest="22" MinimumHeightRequest="22" VerticalOptions="Center" Padding="4,0" />
                        </Grid>
                        <Label x:Name="SummaryLabel" LineBreakMode="WordWrap" FontAttributes="Italic" FormattedText="{Binding SummaryFormatted}"/>
                    </VerticalStackLayout>
            </Border>

            <!-- Trainers Card -->
            <Border x:Name="TrainersFrame" Padding="12" Margin="8,6"  IsVisible="{Binding TrainersFrameVisible}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Trainers_Label}" FontAttributes="Bold" />
                    <CollectionView x:Name="TrainersCollection" HeightRequest="200" ItemsSource="{Binding Trainers}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Padding="8" Spacing="8">
                                    <Label Text="{Binding}" />
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Cohorts / Training groups Card -->
            <Border x:Name="CohortsFrame" Padding="12" Margin="8,6" IsVisible="{Binding CohortsFrameVisible}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Cohorts_Label}" FontAttributes="Bold" />
                    <StackLayout x:Name="CohortDots" Spacing="8" />
                </VerticalStackLayout>
            </Border>

            <!-- Registrations Card -->
            <Border x:Name="RegistrationsFrame" Padding="12" Margin="8,6"  IsVisible="{Binding RegistrationsFrameVisible}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Registrations_Label}" FontAttributes="Bold" />
                    <CollectionView x:Name="RegistrationsCollection" HeightRequest="300" SelectionMode="Single" SelectionChanged="OnRegistrationSelected" ItemsSource="{Binding Registrations}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:EventRegistrationRow">
                                <VerticalStackLayout Padding="8" Spacing="4">
                                    <Label Text="{Binding Text}">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsCurrentUserOrCouple}" Value="True">
                                                <Setter Property="FontAttributes" Value="Bold" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                    <Label Text="{Binding Secondary}" FontSize="12" Style="{StaticResource MutedLabelStyle}" IsVisible="{Binding HasSecondary}" />
                                    <CollectionView ItemsSource="{Binding Trainers}" IsVisible="{Binding HasTrainers}" SelectionMode="None">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Label Text="{Binding .}" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
    </RefreshView>

</ContentPage>
