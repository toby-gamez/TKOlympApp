<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.EventPage"
             Title="{svc:Translate EventPage_Title}">

    <RefreshView x:Name="RefreshViewControl" Refreshing="OnRefresh">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="12">
            <ActivityIndicator x:Name="Loading" IsVisible="False" IsRunning="False" HorizontalOptions="Center"/>

            <!-- Header (no Border) -->
            <VerticalStackLayout Spacing="8" Margin="8,6">
                <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="20"/>
            </VerticalStackLayout>
            
            <!-- Meta Card -->
            <Border Padding="12" Margin="8,6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Info_Label}" FontAttributes="Bold" />
                    <Label x:Name="LocationLabel"/>
                    <Label x:Name="DateRangeLabel"/>
                    <Label x:Name="CreatedAtLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                    <Label x:Name="UpdatedAtLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                    <HorizontalStackLayout Spacing="12">
                        <Label x:Name="RegistrationOpenLabel" Text="{svc:Translate Registration_Open}" FontSize="12" TextColor="#2e7d32" IsVisible="False" Style="{StaticResource MutedLabelStyle}"/>
                        <Label x:Name="PublicLabel" Text="{svc:Translate Public_Label}" IsVisible="False" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                        <Label x:Name="VisibleLabel" Text="{svc:Translate Visible_Label}" IsVisible="False" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="12">
                        <Label x:Name="CapacityLabel" FontSize="12"/>
                        <Label x:Name="RegistrationsLabel" FontSize="12"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Register Button (visible when registration is open) -->
            <Button x:Name="RegisterButton" Text="{svc:Translate Registration_Button_Text}" IsVisible="False" Margin="8,6" HorizontalOptions="Fill" Clicked="OnRegisterButtonClicked" />

            <!-- Actions shown when already registered: Edit + Delete on one row (hidden by default) -->
            <Grid x:Name="RegistrationActionsRow" IsVisible="False" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="8,6" HorizontalOptions="Fill">
                <Button x:Name="EditRegistrationButton" Text="{svc:Translate Edit_Button_Text}" Grid.Column="0" HorizontalOptions="Fill" />
                <Button x:Name="DeleteRegistrationButton" Text="{svc:Translate Delete_Button_Text}" Grid.Column="1" HorizontalOptions="Fill" Clicked="OnDeleteRegistrationsClicked" />
            </Grid>

            <!-- Description Card -->
            <Border x:Name="DescFrame" Padding="12" Margin="8,6"  IsVisible="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Description_Label}" FontAttributes="Bold" />
                    <Label x:Name="DescLabel" LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <!-- Summary Card -->
            <Border x:Name="SummaryFrame" Padding="12" Margin="8,6"  IsVisible="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Summary_Label}" FontAttributes="Bold" />
                    <Label x:Name="SummaryLabel" LineBreakMode="WordWrap" FontAttributes="Italic"/>
                </VerticalStackLayout>
            </Border>

            <!-- Trainers Card -->
            <Border x:Name="TrainersFrame" Padding="12" Margin="8,6"  IsVisible="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Trainers_Label}" FontAttributes="Bold" />
                    <CollectionView x:Name="TrainersCollection" HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Padding="8" Spacing="8">
                                    <Label Text="{Binding}" />
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Registrations Card -->
            <Border x:Name="RegistrationsFrame" Padding="12" Margin="8,6"  IsVisible="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Event_Registrations_Label}" FontAttributes="Bold" />
                    <CollectionView x:Name="RegistrationsCollection" HeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Padding="8" Spacing="4">
                                    <Label Text="{Binding Text}" />
                                    <Label Text="{Binding Secondary}" FontSize="12" Style="{StaticResource MutedLabelStyle}" IsVisible="{Binding HasSecondary}" />
                                    <CollectionView ItemsSource="{Binding Trainers}" IsVisible="{Binding HasTrainers}" SelectionMode="None">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Label Text="{Binding .}" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
    </RefreshView>

</ContentPage>
