<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.NoticePage"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             Title="{svc:Translate NoticePage_Title}">
    <RefreshView x:Name="NoticeRefresh" Refreshing="OnNoticeRefresh">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="12">
            <VerticalStackLayout Spacing="8" Margin="8,6">
                <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="20" />
            </VerticalStackLayout>
                <Border x:Name="InfoFrame" Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Notice_Info}" FontAttributes="Bold" />
                    <Label x:Name="AuthorLabel" FontSize="12"/>
                    <Label x:Name="CreatedAtLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                    <Label x:Name="UpdatedAtLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" IsVisible="False" />
                </VerticalStackLayout>
            </Border>
            <Border x:Name="BodyFrame" Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Grid ColumnDefinitions="*,22" HorizontalOptions="Fill">
                        <Label Text="{svc:Translate Notice_Content}" FontAttributes="Bold" Grid.Column="0" VerticalOptions="Center" />
                        <Button x:Name="CopyBodyButton" Text="{mi:Material Icon=ContentCopy}" Clicked="OnCopyBodyClicked" Grid.Column="1" HorizontalOptions="End" BackgroundColor="Transparent" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" WidthRequest="22" MinimumWidthRequest="22" HeightRequest="22" MinimumHeightRequest="22" VerticalOptions="Center" Padding="4,0" />
                    </Grid>
                    <Label x:Name="BodyLabel" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
