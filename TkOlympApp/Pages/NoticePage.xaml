<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.NoticePage"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:viewModels="clr-namespace:TkOlympApp.ViewModels"
             x:DataType="viewModels:NoticeViewModel"
             Title="{svc:Translate NoticePage_Title}">
    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="12">
            <VerticalStackLayout Spacing="8" Margin="8,6">
                <Label Text="{Binding TitleText}" FontAttributes="Bold" FontSize="20" />
            </VerticalStackLayout>
                <Border x:Name="InfoFrame" Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Notice_Info}" FontAttributes="Bold" />
                    <Label Text="{Binding AuthorText}" FontSize="12" IsVisible="{Binding AuthorVisible}"/>
                    <Label Text="{Binding CreatedAtText}" FontSize="12" Style="{StaticResource MutedLabelStyle}"/>
                    <Label Text="{Binding UpdatedAtText}" FontSize="12" Style="{StaticResource MutedLabelStyle}" IsVisible="{Binding UpdatedAtVisible}" />
                </VerticalStackLayout>
            </Border>
            <Border Padding="12" IsVisible="{Binding BodyVisible}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Grid ColumnDefinitions="*,22" HorizontalOptions="Fill">
                        <Label Text="{svc:Translate Notice_Content}" FontAttributes="Bold" Grid.Column="0" VerticalOptions="Center" />
                        <Button Text="{mi:Material Icon=ContentCopy}"
                                Command="{Binding CopyBodyCommand}"
                                Grid.Column="1"
                                HorizontalOptions="End"
                                BackgroundColor="Transparent"
                                FontSize="12"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                WidthRequest="22"
                                MinimumWidthRequest="22"
                                HeightRequest="22"
                                MinimumHeightRequest="22"
                                VerticalOptions="Center"
                                Padding="4,0" />
                    </Grid>
                          <Label FormattedText="{Binding BodyFormatted}"
                              LineBreakMode="WordWrap"
                              IsVisible="{Binding BodyFormattedVisible}" />
                        <WebView IsVisible="{Binding BodyHtmlVisible}"
                                 HeightRequest="240">
                            <WebView.Source>
                                <HtmlWebViewSource Html="{Binding BodyHtml}" />
                            </WebView.Source>
                        </WebView>
                          <Label Text="{Binding BodyText}"
                              LineBreakMode="WordWrap"
                              IsVisible="{Binding BodyTextVisible}" />
                    <StackLayout Spacing="6" BindableLayout.ItemsSource="{Binding BodyViews}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding .}" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
