<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             xmlns:local="clr-namespace:TkOlympApp.Pages"
             x:Class="TkOlympApp.Pages.CalendarPage"
             Title="{svc:Translate Calendar}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:EventRowTemplateSelector x:Key="EventRowTemplateSelector">
                <!-- Week Header -->
                <local:EventRowTemplateSelector.WeekHeaderTemplate>
                    <DataTemplate x:DataType="local:WeekHeaderRow">
                        <Border Stroke="{StaticResource RespPrimary}" StrokeThickness="2" Padding="8" Margin="6,12,6,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Label Text="{Binding WeekLabel}" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                        </Border>
                    </DataTemplate>
                </local:EventRowTemplateSelector.WeekHeaderTemplate>

                <!-- Day Header -->
                <local:EventRowTemplateSelector.DayHeaderTemplate>
                    <DataTemplate x:DataType="local:DayHeaderRow">
                        <Label Text="{Binding DayLabel}" FontAttributes="Bold" Margin="6,8,6,4" />
                    </DataTemplate>
                </local:EventRowTemplateSelector.DayHeaderTemplate>

                <!-- Single Event -->
                <local:EventRowTemplateSelector.SingleEventTemplate>
                    <DataTemplate x:DataType="local:SingleEventRow">
                        <Border Padding="12" Margin="6">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEventCardTapped" />
                            </Border.GestureRecognizers>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="6">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding EventName}" FontAttributes="Bold" Grid.Column="0">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                                <Setter Property="TextDecorations" Value="Strikethrough" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                    <Label Text="{Binding EventTypeLabel}" FontSize="12" Style="{StaticResource MutedLabelStyle}" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" />
                                </Grid>
                                <Label Text="{Binding LocationOrTrainers}" />
                                <Label Text="{Binding TimeRange}" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </local:EventRowTemplateSelector.SingleEventTemplate>

                <!-- Trainer Group Header -->
                <local:EventRowTemplateSelector.TrainerGroupHeaderTemplate>
                    <DataTemplate x:DataType="local:TrainerGroupHeaderRow">
                        <Border Padding="12,8" Margin="6,6,6,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="{Binding TrainerTitle}" FontAttributes="Bold" Grid.Column="0" />
                                <Label Text="{svc:Translate EventType_Lesson}" FontSize="12" Style="{StaticResource MutedLabelStyle}" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </local:EventRowTemplateSelector.TrainerGroupHeaderTemplate>

                <!-- Trainer Detail Row -->
                <local:EventRowTemplateSelector.TrainerDetailTemplate>
                    <DataTemplate x:DataType="local:TrainerDetailRow">
                        <Grid ColumnDefinitions="120,*,Auto" Padding="12,4,12,4" Margin="6,0" ColumnSpacing="8">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnGroupedRowTapped" />
                            </Grid.GestureRecognizers>
                            <Label Text="{Binding TimeRange}" Grid.Column="0">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <Label Text="{Binding FirstRegistrant}" Grid.Column="1">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsFree}" Value="True">
                                        <Setter Property="Text" Value="{svc:Translate Free}" />
                                        <Setter Property="TextColor" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsHighlighted}" Value="True">
                                        <Setter Property="FontAttributes" Value="Bold" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <Label Text="{Binding DurationText}" Grid.Column="2" HorizontalOptions="End">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsCancelled}" Value="True">
                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>
                    </DataTemplate>
                </local:EventRowTemplateSelector.TrainerDetailTemplate>
            </local:EventRowTemplateSelector>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20,12,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top row: My/All on the left, week navigation on the right -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="0" Margin="0,0,0,5">
            <HorizontalStackLayout Grid.Column="0" Padding="0" Spacing="8" VerticalOptions="Center">
                <Button x:Name="TabMyButton" Text="{svc:Translate Tab_My}" Clicked="OnTabMineClicked" />
                <Button x:Name="TabAllButton" Text="{svc:Translate Tab_All}" Clicked="OnTabAllClicked" />

            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Column="2" Padding="0" Spacing="8" VerticalOptions="Center" HorizontalOptions="End">
                <Button x:Name="PrevWeekButton" Text="◀" Clicked="OnPrevWeekClicked" Style="{StaticResource ButtonSecondary}"/>
                <Button x:Name="TodayWeekButton" Text="{svc:Translate Today}" Clicked="OnTodayWeekClicked" />
                <Button x:Name="NextWeekButton" Text="▶" Clicked="OnNextWeekClicked" Style="{StaticResource ButtonSecondary}"/>
            </HorizontalStackLayout>
        </Grid>

        <RefreshView x:Name="EventsRefresh" Refreshing="OnEventsRefresh" Grid.Row="1">
            <Grid>
                <ScrollView x:Name="EventsScroll">
                    <VerticalStackLayout x:Name="EventsStack" Padding="0" Spacing="0" />
                </ScrollView>
                <Label x:Name="EmptyLabel" IsVisible="False" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
            </Grid>
        </RefreshView>
    </Grid>

</ContentPage>
