<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkOlympApp.Pages.FirstRunPage"
             Title="Welcome"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16" VerticalOptions="Center">
            <Label x:Name="TitleLabel" FontSize="24" HorizontalOptions="Center" Text="Vítejte v aplikaci" />
            <Label x:Name="BodyLabel" FontSize="14" TextColor="Gray" HorizontalOptions="Center" HorizontalTextAlignment="Center" Text="Projděte krátkým průvodcem aplikací." />

            <CarouselView x:Name="OnboardingCarousel" HeightRequest="420" IndicatorView="indicatorView" HorizontalOptions="FillAndExpand">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Spacing="8" Padding="8" HorizontalOptions="FillAndExpand">
                            <Border Padding="0" StrokeShape="RoundRectangle" StrokeThickness="0" CornerRadius="8" HorizontalOptions="FillAndExpand">
                                <Image Source="{Binding Image}" Aspect="AspectFit" HeightRequest="300" HorizontalOptions="Center" />
                            </Border>
                            <Label Text="{Binding Caption}" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="16" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <IndicatorView x:Name="indicatorView" IndicatorColor="#BBBBBB" SelectedIndicatorColor="#333333" HorizontalOptions="Center" />

            <Button Text="{Binding CurrentItem.ButtonText, Source={x:Reference OnboardingCarousel}}" Clicked="OnSlideButtonClicked" HorizontalOptions="Center" Margin="0,8,0,0" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
