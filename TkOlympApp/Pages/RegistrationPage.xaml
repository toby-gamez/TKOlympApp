<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.RegistrationPage"
             Title="{svc:Translate RegistrationPage_Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="20" Text="{svc:Translate RegistrationPage_Title}" />

            <Border Padding="12" Margin="8,6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Registration_Info_Label}" FontAttributes="Bold" />
                    <Label x:Name="EventInfoLabel" />
                    <Label Text="{svc:Translate Registration_Note}" FontAttributes="Italic" />
                </VerticalStackLayout>
            </Border>

            <Label Text="{svc:Translate Registration_MyDetails_Label}" FontAttributes="Bold" />
            <Label x:Name="CurrentUserLabel" FontSize="14" Style="{StaticResource MutedLabelStyle}" />

            <!-- Debug IDs -->

            <Label x:Name="TrainerReservationNotAllowedLabel" Text="není možna rezervace tréninků" FontAttributes="Bold" TextColor="#b71c1c" IsVisible="False" />

            <Label x:Name="TrainerCountLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" IsVisible="False" />

            <Label x:Name="EventNameDisplayLabel" FontAttributes="Bold" FontSize="14" IsVisible="False" />

            <Label Text="Event ID:" FontAttributes="Bold" />
            <Label x:Name="EventIdLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" />

            <Label Text="PersonId:" FontAttributes="Bold" />
            <Label x:Name="PersonIdLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" />

            <Label Text="CoupleId:" FontAttributes="Bold" />
            <Label x:Name="CoupleIdLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
            <Label Text="{svc:Translate Registration_Whom_Label}" FontAttributes="Bold" x:Name="SelectionHeader" />
            <CollectionView x:Name="SelectionCollection" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource SelectableItemContainer}">
                            <Label Text="{Binding DisplayText}" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Trainer selection: shown when a registration target is selected and trainer reservations are allowed -->
            <Label x:Name="TrainerSelectionHeader" Text="{svc:Translate Registration_Trainer_Label}" FontAttributes="Bold" IsVisible="False" />
            <CollectionView x:Name="TrainerSelectionCollection" SelectionMode="None" IsVisible="False">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource SelectableItemContainer}">
                            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                <Label Text="{Binding Name}" VerticalOptions="Center" />
                                <Label Text="{Binding Count}" VerticalOptions="Center" />
                                <Stepper Minimum="0" Maximum="10" Increment="1" Value="{Binding Count, Mode=TwoWay}" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button x:Name="ConfirmButton" Text="{svc:Translate Registration_Button_Text}" IsEnabled="False" HorizontalOptions="Fill" Clicked="OnConfirmClicked" />
            <Label Text="GraphQL" FontAttributes="Bold" Margin="0,8,0,0" />
            <Editor x:Name="MutationPreview" IsReadOnly="True" AutoSize="TextChanges" HeightRequest="140" Margin="0,4,0,0" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
