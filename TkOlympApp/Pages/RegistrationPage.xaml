<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svc="clr-namespace:TkOlympApp.Services"
             x:Class="TkOlympApp.Pages.RegistrationPage"
             Title="{svc:Translate RegistrationPage_Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="20" Text="{svc:Translate RegistrationPage_Title}" />

            <Border Padding="12" Margin="8,6">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="{svc:Translate Registration_Info_Label}" FontAttributes="Bold" />
                    <Label x:Name="EventInfoLabel" />
                    <Label Text="{svc:Translate Registration_Note}" FontAttributes="Italic" />
                </VerticalStackLayout>
            </Border>

            <Label Text="{svc:Translate Registration_MyDetails_Label}" FontAttributes="Bold" />
            <Label x:Name="CurrentUserLabel" FontSize="14" Style="{StaticResource MutedLabelStyle}" />

            <!-- Debug IDs -->
            <Label Text="Event ID:" FontAttributes="Bold" />
            <Label x:Name="EventIdLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" />

            <Label Text="PersonId:" FontAttributes="Bold" />
            <Label x:Name="PersonIdLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" />

            <Label Text="CoupleId:" FontAttributes="Bold" />
            <Label x:Name="CoupleIdLabel" FontSize="12" Style="{StaticResource MutedLabelStyle}" />
            <Label Text="{svc:Translate Registration_Whom_Label}" FontAttributes="Bold" x:Name="SelectionHeader" />
            <CollectionView x:Name="SelectionCollection" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" Margin="4">
                            <Label Text="{Binding DisplayText}" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button x:Name="ConfirmButton" Text="{svc:Translate Registration_Button_Text}" IsEnabled="False" HorizontalOptions="Fill" Clicked="OnConfirmClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
